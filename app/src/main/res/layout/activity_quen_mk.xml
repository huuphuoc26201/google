<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FF018786">

        <Button
            android:id="@+id/d_qlai"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/muitentrang"
            android:contentDescription="@string/app_name"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textViewlogin"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Forgot password"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập địa chỉ email của bạn để khôi phục mật khẩu."
            android:textSize="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"/>


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập email"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/reset_mk"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:background="@drawable/custom_buttom_2"
            android:text="Khôi phục mật khẩu"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nếu không thể khôi phục lại mật khẩu."
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/nhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Nhấn vào đây "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tạo tài khoản mới."
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <View
        android:layout_width="124dp"
        android:layout_height="1.5dp"
        android:layout_marginStart="52dp"
        android:background="@color/black" />




</LinearLayout>