<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextContact"
        android:layout_marginTop="25dp"
        android:hint="Number to contact"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:hint="Emergency Person"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextUser"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextContact"
        android:layout_alignStart="@+id/editTextNumber"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-123dp"
        android:hint="User's Name"
        android:minHeight="48dp"
        android:layout_alignLeft="@+id/editTextNumber"
        android:layout_marginLeft="0dp" />
</RelativeLayout>